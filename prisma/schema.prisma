generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id      String @id @default(cuid())
  clerkid String @unique
  email   String @unique
  username String @unique

  firstname String?
  lastname  String?
  imageurl     String?

  bio String? @db.VarChar(500)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
